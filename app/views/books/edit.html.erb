<h1>Editing Book</h1>

<div class="error">
  <% if @book.errors.any? %>
  <h2 class="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<div class="edit_item">
  <p class="show"><%= link_to 'Show', book_path %></p>
  |
  <p class="back"><%= link_to 'Back', books_path %></p>
</div>
